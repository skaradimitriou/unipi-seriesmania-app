<resources>
    <!-- Base application theme. -->
    <style name="Theme.SeriesMania" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/light_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Rating Stars -->
    <style name="ratingStarTheme" parent="Theme.AppCompat">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
        <item name="colorControlNormal">@color/yellow</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="AppRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey_bg_darker</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="AppRecycler">
        <item name="android:clipToPadding">false</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:paddingBottom">@dimen/dimen_xl</item>
    </style>

    <!-- Text Styles -->

    <style name="text_24_bold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="text_22_bold_white" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_22</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="text_20_bold_dark_grey" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_dark_bg</item>
    </style>

    <style name="text_18_bold_center" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/dimen_s</item>
    </style>

    <style name="text_18_normal_70_white" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="text_18_bold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_18" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_18</item>
    </style>

    <style name="text_16" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="text_16_bold" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_16_bold_white" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_16_white" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Button -->
    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_styling</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingHorizontal">@dimen/dimen_xl</item>
        <item name="android:height">54dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SecondaryBtn">
        <item name="android:backgroundTint">@color/light_blue</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Faq Cards -->
    <style name="faqCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/dimen_s</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10</item>
        <item name="android:layout_marginStart">@dimen/dimen_10</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10</item>
    </style>

</resources>